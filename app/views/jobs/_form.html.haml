= form_for [@company, @job] do |f|
  = render partial: "shared/errors", locals: { target: @job }
  .form-group
    = f.label :title
    = f.text_field :title
  .form-group
    = f.label :description
    = f.text_field :description
  .form-group
    = f.label :level_of_interest
    = f.number_field :level_of_interest
  .form-group
    = f.label :city
    = f.text_field :city
  .form-group
    = collection_select(:job, :category_id, Category.all, :id, :title, prompt: true)
    = link_to "Add new category", new_category_path
  = f.submit
